{% set timeStamp = 20200401 %}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    {# <link rel="apple-touch-icon" sizes="76x76" href="../../assets/img/apple-icon.png"> #}
    <link rel="icon" type="image/png" sizes="96x96" href="/images/favicon.ico">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>

    <title>CMS &bull; Ex-wife</title>

    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport'/>
    <meta name="viewport" content="width=device-width"/>

    {# <!--  Fonts and icons     --> #}
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Muli:400,300' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="{{ asset('build/cms.css') }}">

    {% block css %}
        <link href="{{ preload(asset('build/cms.css'), { as: 'style' }) }}" as="style" rel="preload">
        <link type="text/css" href="{{ asset('build/cms.css') }}" rel="stylesheet" />
    {% endblock %}

    <script>
        window._theme = '{{ _theme }}';
    </script>

    {% block js %}
        <link href="{{ preload(asset('build/runtime.js'), { as: 'script' }) }}" as="script" rel="preload">
        <link href="{{ preload(asset('build/cms.js'), { as: 'script' }) }}" as="script" rel="preload">
        <script src="{{ asset('build/runtime.js') }}" defer></script>
        <script src="{{ asset('build/cms.js') }}" defer></script>
    {% endblock %}
</head>

<body class="page-login">
<nav class="navbar navbar-transparent navbar-absolute">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation-example-2">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="../dashboard/overview.html">CMS &bull; Ex-wife</a>
        </div>
    </div>
</nav>

<div class="wrapper wrapper-full-page">
    <div class="full-page login-page" data-color="" data-image="/assets/img/background/background-2.jpg">
        <!--   you can change the color of the filter page using: data-color="blue | azure | green | orange | red | purple" -->
        <div class="content">
            <div class="container">
                <div class="row">
                    <div class="col-md-4 col-sm-6 col-md-offset-4 col-sm-offset-3">
                        <form class="form-login" method="post" action="/manage/login_check" novalidate autocomplete="off">
                            <div class="card" data-background="color" data-color="blue">
                                <div class="card-header">
                                    <h3 class="card-title">Login</h3>
                                </div>
                                <div class="card-content">
                                    <div class="form-group">
                                        <label>Username</label>
                                        <input name="_username" type="email" placeholder="Enter email" class="form-control input-no-border" value="{{ last_username }}">
                                    </div>
                                    <div class="form-group">
                                        <label>Password</label>
                                        <input name="_password" type="password" placeholder="Password" class="form-control input-no-border">
                                    </div>
                                    <div class="form-group">
                                        <input type="checkbox" id="remember_me" name="_remember_me" checked/>
                                        <label for="remember_me">Keep me logged in</label>
                                    </div>
                                </div>
                                <div class="card-footer text-center">
                                    {% if error %}
                                        <div class="alert alert-danger">{{ error.message }}</div>
                                    {% endif %}
                                    <button type="submit" class="btn btn-fill btn-wd ">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>