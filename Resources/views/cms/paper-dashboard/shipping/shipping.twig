{% extends 'cms/' ~ _theme ~ '/core/orm.twig' %}
{% block extraBodyClass %}{{ parent() }} page-shipping{% endblock %}

{% block css %}
    <link href="{{ preload(asset('build/cms-shipping.css'), { as: 'style' }) }}" as="style" rel="preload">
    <link type="text/css" href="{{ asset('build/cms-shipping.css') }}" rel="stylesheet"/>
{% endblock %}

{% block js %}
    <script>
        window._shippingCostMode = '{{ getenv('SHIPPING_PRICE_MODE') ?: 1 }}';
    </script>

    <link href="{{ preload(asset('build/runtime.js'), { as: 'script' }) }}" as="script" rel="preload">
    <link href="{{ preload(asset('build/cms-shipping.js'), { as: 'script' }) }}" as="script" rel="preload">
    <script src="{{ asset('build/runtime.js') }}" defer></script>
    <script src="{{ asset('build/cms-shipping.js') }}" defer></script>
{% endblock %}
